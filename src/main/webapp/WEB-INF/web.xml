<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
         id="WebApp_ID" version="2.5">
    <display-name>Shop</display-name>


    <servlet>
        <description>Workflow controller</description>
        <display-name>WorkflowController</display-name>
        <servlet-name>WorkflowController</servlet-name>
        <servlet-class>org.automation.dojo.web.servlet.WorkflowController</servlet-class>
    </servlet>

    <servlet-mapping>
        <servlet-name>WorkflowController</servlet-name>
        <url-pattern>/search</url-pattern>
    </servlet-mapping>



